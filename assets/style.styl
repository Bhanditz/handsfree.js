// Core elements
body
  padding: 40px 20px
div
  position: relative
img, svg
  vertical-align: middle
  max-width: 100%

// Helpers
.cursor-pointer
  cursor: pointer

// GitHub
.github-corner
  position: absolute
  top: -40px
  right: -20px
  color: var(--color-bg)

// ✨ SPARKLES ✨
.logo-sparkles
  /* Permalink - use to edit and share this gradient: http://colorzilla.com/gradient-editor/#ffff00+0,f608ff+14,9653fa+40,0dd39f+95,4096ee+100 */
  background: #ffff00 /* Old browsers */
  background: -moz-linear-gradient(-45deg, #ffff00 20%, #f608ff 35%,#9653fa 60%,#0dd39f 95%,#4096ee 100%) /* FF3.6-15 */
  background: -webkit-linear-gradient(-45deg, #ffff00 20%, #f608ff 35%,#9653fa 60%,#0dd39f 95%,#4096ee 100%) /* Chrome10-25,Safari5.1-6 */
  background: linear-gradient(135, #ffff00 20%, #f608ff 35%,#9653fa 60%,#0dd39f 95%,#4096ee 100%) /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */

// LOGO
$logoSize = 300px
#logo
  margin: auto
  width: $logoSize
  height: $logoSize
  box-shadow: 1px 1px 3px rgba(0, 0, 0, 0.35)
  border-radius: $logoSize
  padding: 2.5%
  margin-bottom: 20px

  video
    width: 100%
    height: auto
    visibility: hidden

  div
    width: 100%
    height: 100%
    padding: 5%
    border-radius: 100%
    box-shadow: 1px 1px 3px rgba(0, 0, 0, 0.35) inset

  // Paddings
  > div
    padding: 3%
  > div > div
    padding: 3%
  > div > div > div
    padding: 5%
  > div > div > div > div
    padding: 5%

  // White insets
  > div > div,
  > div > div > div > div
    box-shadow: 1px 1px 3px rgba(0, 0, 0, 0.35)
  > div > div,
  > div > div > div > div
    background: #fff

  // inner background
  > div > div > div > div > div
    background: #673a5f
    padding: 0

.handsfree-debugger
  overflow: hidden
