// Core elements
body
  padding: 40px 20px
div
  position: relative
img, svg
  vertical-align: middle
  max-width: 100%
section
  padding: 20px
  padding-bottom: 100px

// Helpers
.cursor-pointer
  cursor: pointer

// GitHub
.github-corner
  position: absolute
  top: 0
  right: 0
  z-index: 2

// ✨ SPARKLES ✨
.logo-sparkles
  /* Permalink - use to edit and share this gradient: http://colorzilla.com/gradient-editor/#ffff00+0,f608ff+14,9653fa+40,0dd39f+95,4096ee+100 */
  background: #ffff00 /* Old browsers */
  background: -moz-linear-gradient(-45deg, #ffff00 20%, #f608ff 35%,#9653fa 60%,#0dd39f 95%,#4096ee 100%) /* FF3.6-15 */
  background: -webkit-linear-gradient(-45deg, #ffff00 20%, #f608ff 35%,#9653fa 60%,#0dd39f 95%,#4096ee 100%) /* Chrome10-25,Safari5.1-6 */
  background: linear-gradient(135, #ffff00 20%, #f608ff 35%,#9653fa 60%,#0dd39f 95%,#4096ee 100%) /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */

// Handsfree states
body.handsfree-stopped .handsfree-show-when-stopped
  display: inherit
  &.btn
    display: inline-block
body.handsfree-stopped .handsfree-show-when-started
  display: none
body.handsfree-started .handsfree-show-when-stopped
  display: none
body.handsfree-started .handsfree-show-when-started
  display: inherit
  &.btn
    display: inline-block

// Spectre.css
.card
  margin-bottom: 20px
body .hljs
  padding: 20px

// LOGO
$logoSize = 300px
#logo
  margin: auto
  width: $logoSize
  height: $logoSize
  box-shadow: 1px 1px 3px rgba(0, 0, 0, 0.35)
  border-radius: $logoSize
  padding: 2.5%
  margin-bottom: 20px

  video
    width: 100%
    height: auto
    visibility: hidden

  div
    width: 100%
    height: 100%
    padding: 5%
    border-radius: 100%
    box-shadow: 1px 1px 3px rgba(0, 0, 0, 0.35) inset

  // Paddings
  > div
    padding: 3%
  > div > div
    padding: 3%
  > div > div > div
    padding: 5%
  > div > div > div > div
    padding: 5%

  // White insets
  > div > div,
  > div > div > div > div
    box-shadow: 1px 1px 3px rgba(0, 0, 0, 0.35)
  > div > div,
  > div > div > div > div
    background: #fff

  // inner background
  > div > div > div > div > div
    background: #673a5f
    padding: 0

.handsfree-debugger
  overflow: hidden

.handsfree-cursor:after
  position: absolute
  content: ''
  width: 16px
  height: 16px
  border-radius: 16px
  background: #f00
  display: block
  opacity: 0.25
  z-index: 999998
  transition: width 0 ease, height 0 ease, border-radius 0.15s ease, margin-left 0.15s ease, margin-top 0.15s ease, opacity 0.35s ease

.handsfree-cursor.handsfree-clicked:after
  width: 128px
  height: 128px
  border-radius: 128px
  margin-left: -56px
  margin-top: -56px
  opacity: 0
  transition: width 0.15s ease, height 0.15s ease, border-radius 0.15s ease, margin-left 0.15s ease, margin-top 0.15s ease, opacity 0.35s ease

body.handsfree-stopped .handsfree-cursor
  display: none

.handsfree-simple-keyboard > input
  width: 100%
  margin-bottom: 20px

.handsfree-simple-keyboard .simple-keyboard.hg-theme-default .hg-button
  height: 70px
