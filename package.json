{
  "name": "handsfree",
  "version": "0.1.0",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "handsfree": "vue-cli-service build --target lib --name handsfree src/handsfree/Handsfree.js"
  },

  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "eslintIgnore": ["src/handsfree/libs/brf_wasm/**/*"],

  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  
  "dependencies": {
    "simple-keyboard": "^2.8.0"
  },
  
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.0.5",
    "@vue/cli-plugin-eslint": "^3.0.5",
    "@vue/cli-service": "^3.0.5",
    "arraybuffer-loader": "^1.0.7",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.8.0",
    "eslint-plugin-vue": "^5.0.0-0",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.1",
    "vue": "^2.5.17",
    "vue-cli-plugin-vuetify": "^0.4.5",
    "vue-template-compiler": "^2.5.17",
    "vuetify": "^1.3.0",
    "vuetify-loader": "^1.0.5"
  }
}
